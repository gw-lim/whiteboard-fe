{
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "importOrder": [
    "^hooks/(.*)$",
    "^store/(.*)$",
    "^apis/(.*)$",
    "^utils/(.*)$",
    "^types/(.*)$",
    "^pages/(.*)$",
    "^components/(.*)$",
    "^styles/(.*)$",
    "^public/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
